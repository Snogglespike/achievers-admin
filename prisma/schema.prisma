datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String @id @default(cuid())
  email String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  chapters UserAtChapter[]
  userRels UserAtChapter[] @relation(name: "UserRel")

  azureObjectId String
}

model Chapter {
  id      String @id @default(cuid())
  name    String @unique
  address String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users UserAtChapter[]
}

model UserAtChapter {
  user   User   @relation(fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  userId String

  chapter   Chapter @relation(fields: [chapterId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  chapterId String

  userRel   User?   @relation(name: "UserRel", fields: [userRelId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  userRelId String?

  assignedAt DateTime @default(now())
  assignedBy String

  @@id([userId, chapterId])
}
