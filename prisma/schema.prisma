datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserType {
  GUEST
  MENTOR
  STUDENT
  ADMIN
}

model User {
  id    String @id @default(cuid())
  email String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  role UserType @default(GUEST)

  chapters UserAtChapter[]
  userRels UserAtChapter[] @relation(name: "userRel")
}

model Chapter {
  id      String @id @default(cuid())
  name    String @unique
  address String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users UserAtChapter[]
}

model UserAtChapter {
  user   User   @relation(fields: [userId], references: [id])
  userId String

  chapter   Chapter @relation(fields: [chapterId], references: [id])
  chapterId String

  userRel   User?   @relation(name: "userRel", fields: [userRelId], references: [id])
  userRelId String?

  assignedAt DateTime @default(now())
  assignedBy String

  @@id([userId, chapterId])
}
